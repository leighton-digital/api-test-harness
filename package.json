{
  "name": "@leighton-digital/api-test-harness",
  "version": "0.1.0",
  "license": "MIT",
  "description": "A CDK based API test harness for returning predefined deterministic responses",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leighton-digital/api-test-harness.git"
  },
  "bugs": {
    "url": "https://github.com/leighton-digital/api-test-harness/issues"
  },
  "author": "leighton digital",
  "type": "module",
  "homepage": "https://leighton-digital.github.io/api-test-harness/",
  "keywords": [
    "CDK",
    "AWS CDK",
    "TypeScript",
    "Jest",
    "test"
  ],
  "publishConfig": {
    "tag": "latest",
    "access": "public",
    "provenance": true
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "packageManager": "pnpm@10.30.3+sha512.c961d1e0a2d8e354ecaa5166b822516668b7f44cb5bd95122d590dd81922f606f5473b6d23ec4a5be05e7fcd18e8488d47d978bbe981872f1145d06e9a740017",
  "scripts": {
    "build": "tsc -p tsconfig.build.json --listEmittedFiles",
    "preinstall": "npx only-allow pnpm",
    "postbuild": "rm tsconfig.build.tsbuildinfo",
    "build:watch": "tsc -w -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "docs:ref": "typedoc",
    "docs:post": "node scripts/configure-typedoc.mjs",
    "docs:build": "pnpm --prefix docs-site run build",
    "docs:serve": "pnpm --prefix docs-site run serve",
    "format:check": "biome check --formatter-enabled=true --linter-enabled=false .",
    "format:fix": "biome format --write --fix .",
    "format": "biome format --write .",
    "lint": "biome check --linter-enabled=true --formatter-enabled=false .",
    "lint:fix": "biome check --linter-enabled=true --formatter-enabled=true --write .",
    "check": "npx @biomejs/biome check --write",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "check:staged": "npx @biomejs/biome check --write --staged",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "POWERTOOLS_DEV=true jest",
    "test:watch": "POWERTOOLS_DEV=true jest --watch",
    "release": "LEFTHOOK=0 commit-and-tag-version",
    "release:beta": "LEFTHOOK=0 commit-and-tag-version --prerelease",
    "release:stable": "LEFTHOOK=0 commit-and-tag-version --release-as 1.0.0"
  },
  "peerDependencies": {
    "aws-cdk-lib": "^2.196.1",
    "constructs": "^10.4.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.15",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@swc/core": "1.15.11",
    "@swc/jest": "0.2.39",
    "@types/jest": "29.5.14",
    "@types/node": "20.19.33",
    "aws-cdk-lib": "2.238.0",
    "commit-and-tag-version": "12.6.1",
    "commitizen": "4.3.1",
    "constructs": "10.5.0",
    "conventional-changelog-conventionalcommits": "9.1.0",
    "cz-conventional-changelog": "3.3.0",
    "esbuild": "0.27.3",
    "jest": "29.7.0",
    "lefthook": "1.13.6",
    "ts-jest": "29.4.6",
    "typedoc": "0.28.17",
    "typedoc-plugin-markdown": "4.10.0",
    "typescript": "5.9.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "2.31.0",
    "@aws-sdk/client-dynamodb": "3.992.0",
    "@aws-sdk/util-dynamodb": "3.992.0",
    "@fastify/aws-lambda": "5.1.4",
    "convict": "6.2.4",
    "fastify": "5.7.4",
    "uuid": "11.1.0"
  }
}
