{
  "name": "@leighton-digital/api-test-harness",
  "version": "0.1.0-beta.0",
  "description": "A CDK based API test harness for returning predefined deterministic responses",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json --listEmittedFiles",
    "postbuild": "rm tsconfig.build.tsbuildinfo",
    "build:watch": "tsc -w -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "check": "npx @biomejs/biome check --write",
    "check:staged": "npx @biomejs/biome check --write --staged",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "POWERTOOLS_DEV=true jest",
    "test:watch": "POWERTOOLS_DEV=true jest --watch",
    "release": "LEFTHOOK=0 commit-and-tag-version",
    "release:beta": "LEFTHOOK=0 commit-and-tag-version --prerelease",
    "release:stable": "LEFTHOOK=0 commit-and-tag-version --release-as 1.0.0"
  },
  "peerDependencies": {
    "aws-cdk-lib": "^2.197.0",
    "constructs": "^10.4.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.16",
    "aws-cdk-lib": "^2.197.0",
    "commit-and-tag-version": "^12.5.1",
    "commitizen": "^4.3.1",
    "constructs": "^10.4.2",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.25.4",
    "jest": "^29.7.0",
    "lefthook": "^1.11.13",
    "ts-jest": "^29.3.4",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "CDK",
    "Jest",
    "test"
  ],
  "author": "leighton digital",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^2.20.0",
    "@aws-sdk/client-dynamodb": "^3.812.0",
    "@aws-sdk/util-dynamodb": "^3.812.0",
    "@fastify/aws-lambda": "^5.1.4",
    "convict": "^6.2.4",
    "fastify": "^5.3.3",
    "uuid": "^11.1.0"
  }
}
